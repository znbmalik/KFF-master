clear; clc;

dataRoot = '../datasets/UCF101/';
%dataRoot = '/home/znb/ltc-master/datasets/UCF101/';
% Loop over three splits
for split = 1:3
    testDir = fullfile(dataRoot, 'splits', sprintf('split%d', split), 'test');

    
    % Loop over possible window sizes
    for W = 16
        % Loop over possible skips
        for skip = 4
            targetDir = fullfile(dataRoot, 'splits', sprintf('split%d', split), sprintf('test_%d_%d', W, skip));
        
            classes = dir(testDir);
            %disp(classes)
            classes = classes([classes.isdir]);
            
            classes = classes(arrayfun(@(x) x.name(1), classes) ~= '.');
            
            C = length(classes);
           
            for class = 1:C
                disp(['Class: ' num2str(class) ' ' classes(class).name]);
                c_name="v_"+classes(class).name;
                disp(c_name)
              
                system(sprintf('mkdir -p ''%s''', fullfile(targetDir, classes(class).name)));
                
                videos = dir(fullfile(testDir, classes(class).name, '*.avi'));
              
                disp(fullfile(testDir, classes(class).name, '*.avi'));
                V = length(videos);
                disp(V)
                
                 for video = 1:V
                    [p,v_name,e]=fileparts(videos(video).name);
                    disp(v_name)
                    clipDir = fullfile(dataRoot, 'rgb', 'jpg');%added by zainab
                    clips=dir(fullfile(clipDir, classes(class).name, sprintf('%s.*',v_name)));%added by zainab
                    video_name=split(v_name,'.')
                   
                    disp(fullfile(dataRoot, 'rgb', 'jpg', classes(class).name, startsWith(clips(clip).name,video_name), '*.jpg'))

                    totalClips=length(clips);
                    frames=[]
                    for clip = 1:totalClips
                        disp(clips(clip).name)
    
                        disp(fullfile(dataRoot, 'rgb', 'jpg', classes(class).name, clips(clip).name, '*.jpg'))
                        frames = dir(fullfile(dataRoot, 'rgb', 'jpg', classes(class).name, clips(clip).name, '*.jpg'));
                        disp(length(frames))
                    end
                    disp(length(frames))

                    totalDuration = length(frames); % note: nFlow = nRGB -1
                    

                    disp(totalDuration)
                    
                    nClips = ceil((totalDuration - W)/skip) + 1;
                    disp(nClips)
                    
                    if(totalDuration < W)
                        nClips = 1;
                            system(sprintf('touch ''%s.avi_%04d''',  fullfile(targetDir, classes(class).name, v_name), 1));
                    end
                    for tt = 1:nClips
                             disp("hello")
                           
                            system(sprintf('touch ''%s.avi_%04d''',  fullfile(targetDir, classes(class).name, v_name), tt));
                    end
                
                end
            end
        end
    end
